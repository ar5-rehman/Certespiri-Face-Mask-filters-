<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:src="@drawable/home_top_section"
        android:layout_alignParentTop="true"
        />

    <Button
        android:id="@+id/size"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_below="@+id/image"
        android:text="Select size"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/round_button"
        android:drawableLeft="@drawable/button_certespiri"
        android:paddingLeft="20dp"
        />

    <Button
        android:id="@+id/style"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_below="@+id/size"
        android:text="Select style"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button"
        android:drawableLeft="@drawable/button_select_style_new"
        android:paddingLeft="20dp"
        />

    <Button
        android:id="@+id/shop"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_below="@+id/style"
        android:text="Shop now"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button"
        android:drawableLeft="@drawable/button_shopcart_new"
        android:paddingLeft="20dp"
        />

    <ImageView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop"
        android:text="Shop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/button_settings"
        />

</RelativeLayout>